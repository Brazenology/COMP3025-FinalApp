<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3aab8e"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/five"
        android:id="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#1f2861"
        android:layout_marginTop="100px"
        android:layout_marginBottom="50px" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo"
        android:layout_alignEnd="@+id/consecDays"
        android:layout_above="@+id/consecDays"
        android:layout_weight="0.03"
        android:layout_marginBottom="50px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter how many calories you have recently eaten:"
        android:id="@+id/textView7"
        android:textStyle="italic"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/userInput"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:layout_marginRight="30px"
        android:background="#dbdbdb"
        android:text="0"
        android:textSize="30dp" />

    <Button
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:onClick="onOkButtonClick"
        android:layout_marginTop="50px"
        android:background="#f6804d"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="bold" />

</LinearLayout>